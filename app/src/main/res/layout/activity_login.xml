<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/primary">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/login_image_view"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:src="@mipmap/ic_download_logo_foreground" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_inputLayout_user"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/login_image_view"
        android:textColorHint="@color/surfaces"
        app:boxStrokeColor="@color/surfaces"
        app:hintTextColor="@color/surfaces">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_user"
            android:hint="Enter your email"
            android:gravity="center"
            android:textColorHint="@color/surfaces"
            android:textSize="26sp"
            android:fontFamily="cursive"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_input_password"
        android:layout_below="@+id/login_inputLayout_user"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textAlignment="center"
        android:textColorHint="@color/surfaces"
        app:boxStrokeColor="@color/surfaces">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_password"
            android:hint="Enter your password"
            android:fontFamily="cursive"
            android:inputType="textPassword"
            android:textSize="26sp"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/surfaces"
           android:gravity="center"

            />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_login_btn"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_input_password"
        android:text="Login in"
        android:textAllCaps="false"
        android:fontFamily="cursive"
        android:backgroundTint="@color/surfaces"
        android:textSize="26sp"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login__sign_btn"
        android:layout_margin="20dp"
        android:layout_below="@id/login_login_btn"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:fontFamily="cursive"
        android:textSize="26sp"
        android:backgroundTint="@color/surfaces" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_forgot_password"
        android:text="Forget password?"
        android:textSize="26sp"
        android:fontFamily="cursive"
        android:textColor="@color/surfaces"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        />



</RelativeLayout>